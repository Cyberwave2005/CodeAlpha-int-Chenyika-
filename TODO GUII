import tkinter as tk
from tkinter import messagebox

class TodoListApp:
    def __init__(self, root):
        self.root = root
        self.root.title("To-Do List")

        # Listbox to display tasks
        self.listbox = tk.Listbox(root, height=10, width=50, font=('Arial', 14))
        self.listbox.pack(pady=20)

        # Entry widget to add new tasks
        self.entry = tk.Entry(root, width=40, font=('Arial', 14))
        self.entry.pack(pady=10)

        # Buttons
        self.add_button = tk.Button(root, text="Add Task", command=self.add_task, font=('Arial', 14))
        self.add_button.pack(pady=5)

        self.delete_button = tk.Button(root, text="Delete Task", command=self.delete_task, font=('Arial', 14))
        self.delete_button.pack(pady=5)

        self.clear_button = tk.Button(root, text="Clear List", command=self.clear_list, font=('Arial', 14))
        self.clear_button.pack(pady=5)

    def add_task(self):
        task = self.entry.get()
        if task != "":
            self.listbox.insert(tk.END, task)
            self.entry.delete(0, tk.END)
        else:
            messagebox.showwarning("Warning", "You must enter a task.")

    def delete_task(self):
        try:
            task_index = self.listbox.curselection()[0]
            self.listbox.delete(task_index)
        except:
            messagebox.showwarning("Warning", "You must select a task.")

    def clear_list(self):
        self.listbox.delete(0, tk.END)

if __name__ == "__main__":
    root = tk.Tk()
    app = TodoListApp(root)
    root.mainloop()